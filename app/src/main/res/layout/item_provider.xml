<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lbl_fio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ф.И.О"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/fio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ф.И.О"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/lbl_fio"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/lbl_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Номер телефона"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_fio"
        />
    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ф.И.О"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/lbl_contact"
        app:layout_constraintTop_toBottomOf="@id/fio"/>
</androidx.constraintlayout.widget.ConstraintLayout>